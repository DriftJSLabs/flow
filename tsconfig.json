{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@driftjs/core": ["./packages/core/src/index.ts"],
      "@driftjs/analyzer": ["./packages/analyzer/src/index.ts"],
      "@driftjs/enhancer": ["./packages/enhancer/src/index.ts"],
      "@driftjs/patterns": ["./packages/patterns/src/index.ts"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next", ".turbo"]
} 