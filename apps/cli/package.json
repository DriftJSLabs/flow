{
  "name": "@driftjs/flow",
  "version": "0.2.0",
  "description": "The smart CLI for safe schema evolution. Flow wraps your ORM to automate zero-downtime migrations and prevent production risks.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "flow": "./dist/index.js"
  },
  "scripts": {
    "release": "bun run scripts/release.ts && bun publish",
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "database",
    "migration",
    "orm",
    "prisma",
    "drizzle",
    "typeorm",
    "cli",
    "production-safety"
  ],
  "author": "DriftJS Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.0.0",
    "diff": "^5.2.0",
    "dotenv": "^16.4.5",
    "execa": "^9.6.0",
    "fs-extra": "^11.2.0",
    "ms": "^2.1.3",
    "node-sql-parser": "^5.0.0",
    "picocolors": "^1.0.1",
    "prompts": "^2.4.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.0",
    "mysql2": "^3.10.1",
    "pg": "^8.12.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@driftjs/core": "workspace:*",
    "@driftjs/enhancer": "workspace:*",
    "@types/better-sqlite3": "^7.6.9",
    "@types/diff": "^5.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.0",
    "@types/ms": "^0.7.34",
    "@types/pg": "^8.11.0",
    "@types/sqlite3": "^5.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "@types/bun": "latest"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
